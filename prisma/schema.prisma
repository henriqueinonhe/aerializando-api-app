// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  name      String
  password  String
  salt      String
  createdAt DateTime @default(now())
}

model ClassPlan {
  id            Int            @id @default(autoincrement())
  name          String
  classNumber   String
  focusType1    String
  focusType2    String
  tricks        Trick[]
  exerciseBlocs ExerciseBloc[]
}

model ExerciseBloc {
  id          Int        @id @default(autoincrement())
  exercises   Exercise[]
  classPlan   ClassPlan  @relation(fields: [classPlanId], references: [id], onDelete: Cascade)
  classPlanId Int
}

model Exercise {
  id             Int            @id @default(autoincrement())
  type           String
  name           String
  description    String?
  videoLink      String?
  videoThumbnail String?
  exerciseBlocs  ExerciseBloc[]
}

model Trick {
  id             Int         @id @default(autoincrement())
  name           String
  description    String?
  videoLink      String?
  videoThumbnail String?
  type           TrickType?  @relation(fields: [typeId], references: [id], onDelete: SetNull, onUpdate: SetNull)
  typeId         Int?
  classPlans     ClassPlan[]
}

model TrickType {
  id     Int     @id @default(autoincrement())
  name   String  @unique
  tricks Trick[]
}
